import os
import logging
import openai
from telegram import Update
from telegram.ext import ApplicationBuilder, CommandHandler, MessageHandler, ContextTypes, filters

# Set up logging
logging.basicConfig(format='%(asctime)s - %(name)s - %(levelname)s - %(message)s', level=logging.INFO)

# API keys from environment
openai.api_key = os.getenv("OPENAI_API_KEY")
TELEGRAM_TOKEN = os.getenv("TELEGRAM_TOKEN")

# Start command
async def start(update: Update, context: ContextTypes.DEFAULT_TYPE):
    await update.message.reply_text(
        "Hello! I'm Emotional Saathi ðŸ«¶\n\nJust say something like 'I'm feeling sad' or 'Iâ€™m anxious', and Iâ€™ll be here to help."
    )

# Help command
async def help_command(update: Update, context: ContextTypes.DEFAULT_TYPE):
    await update.message.reply_text(
        "**Here's what I can do:**\n"
        "- `/start` â€“ Begin our chat\n"
        "- `/help` â€“ See available commands\n"
        "- `/clear` â€“ Reset the conversation\n\n"
        "Or simply say:\n"
        "- I'm feeling anxious\n"
        "- I need someone to talk to\n\n"
        "*This is a safe, kind space.*"
    )

# Clear command
async def clear_command(update: Update, context: ContextTypes.DEFAULT_TYPE):
    context.chat_data.clear()
    await update.message.reply_text("Cleared our past messages. Feel free to start fresh ðŸ§¼")

# Handle normal messages
async def handle_message(update: Update, context: ContextTypes.DEFAULT_TYPE):
    user_input = update.message.text

    prompt = (
        f"You are an emotional support chatbot named Emotional Saathi. "
        f"Respond kindly and supportively to the user's message.\n\nUser: {user_input}\nBot:"
    )

    try:
        response = openai.ChatCompletion.create(
            model="gpt-3.5-turbo",
            messages=[{"role": "user", "content": prompt}]
        )
        bot_reply = response['choices'][0]['message']['content'].strip()
    except Exception as e:
        bot_reply = "I'm having trouble responding right now. Please try again shortly. ðŸ’™"

    await update.message.reply_text(bot_reply)

# Main bot setup
if __name__ == "__main__":
    app = ApplicationBuilder().token(TELEGRAM_TOKEN).build()

    app.add_handler(CommandHandler("start", start))
    app.add_handler(CommandHandler("help", help_command))
    app.add_handler(CommandHandler("clear", clear_command))
    app.add_handler(MessageHandler(filters.TEXT & ~filters.COMMAND, handle_message))

    print("Emotional Saathi is running...")
    app.run_polling()
